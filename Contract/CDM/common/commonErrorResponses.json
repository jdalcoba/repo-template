        "properties": {
            "error": {
                "type": "string",
                "description": "Error code",
                "example": "CONFLICT"
            },
            "message": {
                "type": "string",
                "description": "Error description",
                "example": "The request could not be completed due to a conflict with the current state of the resource"
            },
            "details": {
                "type": "object",
                "description": "Additional info about the error",
                "example": {
                    "description": "The user already exists"
                }
            }
        }
    },
    "Default415": {
        "description": "The media format of the requested data is not supported by the server.",
