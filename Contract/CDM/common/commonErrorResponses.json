        "properties": {
            "error": {
                "type": "string",
                "description": "Error code",
                "example": "UNSUPPORTED_MEDIA_TYPE"
            },
            "message": {
                "type": "string",
                "description": "Error description",
                "example": "The media format of the requested data is not supported by the server."
